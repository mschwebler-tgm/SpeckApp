{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": [
      "es2017"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "lib",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ]
}
